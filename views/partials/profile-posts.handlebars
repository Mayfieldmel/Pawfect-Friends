{{#if image}}
    <a href="/img/{{id}}" class="post-info-links">  
        <div class="box margin-bottom">
            <img src={{image}} />
            <nav class="level is-mobile right-btn">
                <div class="level-left">
                    <button id="delete-image" class="button is-primary margin-right">Delete</button>
                <a href="/img/{{id}}" class="level-item" aria-label="reply">
                    <span class="icon is-small">
                    <i class="fas fa-reply" aria-hidden="true"></i>
                    </span>
                </a>
                </div>
            </nav>
        </div>
    </a>
{{else}}
    <a href="/post/{{id}}" class="post-info-links">
        <div class="box margin-bottom">
        <article class="media">
           
            <div class="media-left">
            <figure class="image is-64x64">
                 {{#if profile_pic}}
                <img src={{profile_pic}} alt="Image">
                 {{else}}
                 <img src="/images/paw-print.png">
                 {{/if}}
            </figure>
            </div>
            <div class="media-content">
            <div class="content">
                <p>
                <strong>{{pet_name}}</strong> <small>| {{format_date created_at}}</small> <small>| {{comments.length}} {{format_plural "comment" comments.length}}</small>
                </br>
                {{post_text}}
                </p>
            </div>
            <nav class="level is-mobile">
                <div class="level-left">
                    <a class="margin-right" href="/profile/edit/{{id}}">
                        <button class="button is-primary">Edit Post</button>
                    </a>
                <a class="level-item" aria-label="reply">
                    <span class="icon is-small">
                    <i class="fas fa-reply" aria-hidden="true"></i>
                    </span>
                </a>
                </div>
            </nav>
            </div>
        </article>
        </div>
    </a>
{{/if}}