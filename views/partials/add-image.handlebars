<div id="imgModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <form id="add-img-form">
      <header class="modal-card-head">
        <p class="modal-card-title">Add Image</p>
        <button class="delete" aria-label="close" id="exit"></button>
      </header>
      <section class="modal-card-body">
        <label for="file">Image</label>
        <div class="file has-name is-boxed">
          <label class="file-label">
            <input class="file-input" type="file" name="image" id="input-files" action="/upload" method="POST"
              enctype="multipart/form-data">
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a fileâ€¦
                max size: 68KB
              </span>
            </span>
          </label>
          <div id="preview-images"></div>
        </div>
      <footer class="modal-card-foot">
        <button class="button is-info" type="submit">Save changes</button>
        <button id="end" class="button">Cancel</button>
      </footer>
    </form>
  </div>
</div>

<button id="add-img-btn" class="button is-info">+ Image</button>
<div class="icon-text hide">
  <span class="icon has-text-success hide" id="success-icon">
    <i class="fas fa-check-square"></i>
  </span>
  <span class="hide" id="success message">Success</span>
</div>
<script src="/javascript/add-image.js"></script>
