
<div class="box">

  {{!-- update profile pic modal --}}
<label class="label">Profile Picture</label>
<br/>
<figure class="image is-128x128">
  {{#if pet.profile_pic}}
  <img id="preview-profile-pic" src={{pet.profile_pic}}>
  {{else}}
  <img id="preview-profile-pic" src="/images/paw-print.png">
  {{/if}}
</figure>
<div class="field is-grouped">
</div>
<div id="imgModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <form id="add-img-form">
      <header class="modal-card-head">
        <p class="modal-card-title">Update Image</p>
        <button class="delete" aria-label="close" id="exit"></button>
      </header>
      <section class="modal-card-body">
        <label for="file">Image</label>
        <div class="file has-name is-boxed">
          <label class="file-label">
            <input class="file-input" type="file" name="image" id="input-files" action="/upload" method="POST"
              enctype="multipart/form-data">
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a fileâ€¦
              </span>
            </span>
          </label>
          <div id="preview-images"></div>
        </div>
      <footer class="modal-card-foot">
        <button class="button is-info" type="submit">Save changes</button>
        <button id="end" class="button">Cancel</button>
      </footer>
    </form>
  </div>
</div>

<button id="add-img-btn" class="button is-primary">Update Profile Picture</button>

{{!-- email and password update --}}
<br/>
<br/>
<br/>
<form id="newProfileUpdates">
  <div class="field">
  <label class="label">Email</label>
  <div class="control has-icons-left has-icons-right">
    <input class="input" id="newEmail" type="email"  value={{pet.email}}>
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
    <span class="icon is-small is-right">
    </span>
  </div>
</div>

<div class="field">
  <label class="label">New Password</label>
  <div class="control has-icons-left has-icons-right">
    <input class="input" id="newPassword" type="password" value="pet.password">
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
    <span class="icon is-small is-right">
    </span>
  </div>
</div>


<div class="field is-grouped">
  <div class="control">
    <button class="button is-link" type="submit">Submit</button>
  </div>
  <div class="control">
    <button class="button is-link is-light">Cancel</button>
  </div>
</div>

</br></br></br>

<div class="control">
    <button class="button is-link is-danger">Delete Profile</button>
  </div>
  </form>

  
 </div>

