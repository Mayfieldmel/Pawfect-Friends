<article>
  <a href="/profile"> &larr; Back to profile</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-text"> New Text</label>
      <input name="post-text" type="text" value="{{post.post_text}}"/>
    </div>
    <div>
     {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-primary">Save post</button>
    <button type="button" class="button is-danger delete-post-btn">Delete post</button>
  </form>
</article>

